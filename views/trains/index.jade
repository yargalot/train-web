h1 Trains
p: a(href="#/") Back

.alert.alert-info(ng-hide="trains")
  h4.alert-heading Loading trains
  p Just wait a second

ul.list-unstyled
  li(ng-repeat="train in trains")
    h4
      a(ng-href="#/trains/{{train.train_id}}") {{train.train_id}}
      |&nbsp;going to {{train.station_id}}
    p {{train}}